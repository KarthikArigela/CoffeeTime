<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/expresso" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            tools:context=".MainActivity">

            <EditText
                android:id="@+id/name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name of the Customer"
                android:inputType="textCapWords"
                android:padding="16dp"
                android:textColor="@color/black" />

            <TextView
                style="@style/HeaderTextStyle"
                android:fontFamily="@font/abril_fatface"
                android:padding="1dp"
                android:text="QUANTITY"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:context=".MainActivity">

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:onClick="decrement"
                    android:padding="8dp"
                    android:text="-"
                    android:backgroundTint="#FFCA28"
                    />

                <TextView
                    android:id="@+id/quantity_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:onClick="increment"
                    android:padding="8dp"
                    android:text="+"
                    android:backgroundTint="#FFCA28"/>

            </LinearLayout>

            <TextView
                style="@style/HeaderTextStyle"
                android:fontFamily="@font/abril_fatface"
                android:padding="8dp"
                android:text="Toppings"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkbox_whipping_cream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="26sp"
                android:text="Whipping Cream"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <CheckBox
                android:id="@+id/checkbox_chocolate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="26sp"
                android:text="Chocolate"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:padding="8dp"
                android:text="order summary"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/order_summary_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="â‚¹0"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F50057"
                android:onClick="submitOrder"
                android:padding="8dp"
                android:text="Order"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>